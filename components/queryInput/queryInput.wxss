.title {
  position: absolute;
  font-weight: 600;
  color: rgba(51, 204, 255, 0.7);
  top: 15rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: max-content;
}

.input {
  position: relative;
  left: 275rpx;
  top: 280rpx;
  width: 50vw;
  display: flex;
  flex-direction: row;
}

.input>input {
  position: absolute;
  height: 30px;
  background: rgba(51, 204, 255, 0.5);
  border-radius: 5px;
  font-size: 12px;
  width: 347rpx;
  padding-left: 30rpx;
  transition: 0.4s;
  opacity: 1;
  color: wheat;
}

.input>button {
  position: absolute;
  width: 50px;
  font-size: 12px;
  right: 0;
  padding-left: 8px;
  padding-right: 8px;
  background: rgba(252, 126, 68, 0.7);
  background-color: #3e515b;
  color: wheat;
  transition: 0.4s;
  opacity: 1;
  z-index: 2
}

