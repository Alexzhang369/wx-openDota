.text-bg {
  position: absolute;
  height: 90%;
  width: 90%;
  opacity: 0.5;
  background-image: url('http://m.qpic.cn/psb?/V12yzkfP40OwEU/W4ZqJiQ0Q7Knqnihl0j4coRX4vJcW6DVvdDfhdklN5E!/b/dL8AAAAAAAAA&bo=hwIOAQAAAAADB6g!&rf=viewer_4');
